<?xml version="1.0"?>
<component name="org.nuxeo.demo.dam.youtube.component">

  <requires>org.nuxeo.ecm.platform.oauth2.providers.OAuth2ServiceProviderRegistry</requires>
  
  <documentation>
    YouTube Drive Service
    @author Nelson Silva (nelson.silva@inevo.pt)
  </documentation>

  <implementation class="org.nuxeo.demo.dam.youtube.YouTubeService" />

  <service>
    <provide
      interface="org.nuxeo.demo.dam.youtube.YouTubeService" />
  </service>

  <extension-point name="configuration">
    <documentation>
	    <code>
		    <configuration>
		      <provider>youtube</provider>
		      <accountEmail>EMAIL</accountEmail>
		      <clientId>CLIENT_ID</clientId>
		      <clientSecret>CLIENT_SECRET</clientSecret>
		    </configuration>
	    </code>
  	</documentation>
    <object class="org.nuxeo.demo.dam.youtube.ConfigurationDescriptor" />
  </extension-point>

</component>