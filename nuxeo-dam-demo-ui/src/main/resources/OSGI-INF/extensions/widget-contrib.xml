<?xml version="1.0"?>
<component name="org.nuxeo.demo.dam.jsf.layout">

  <extension
          target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
          point="widgettypes">

    <widgetType name="youtube_player">
      <configuration>
        <title>Youtube Player</title>
        <description>
          <p>
            Displays an embedded Youtube player
          </p>
        </description>
        <supportedModes>
          <mode>view</mode>
        </supportedModes>
      </configuration>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">/widgets/youtube_player.xhtml</property>
    </widgetType>
  </extension>

</component>
